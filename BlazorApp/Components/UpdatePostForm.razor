<EditForm Model=@Post OnValidSubmit=@OnValidSubmit
          OnInvalidSubmit=@OnInvalidSubmit>
    <DataAnnotationsValidator/>
    <ValidationSummary class="alert alert-warning"/>
    <div class="form-group">
        <label for="Title">Titel</label>
        <InputText @bind-Value="Post.Title" class="form-control" id="Title"/>
        <!-- Display specific error message -->
        <ValidationMessage For="@(() => Post.Title)"/>
    </div>
    <div class="form-group">
        <label for="Body">Indhold</label>
        <InputText @bind-Value="Post.Body" class="form-control" id="Body"/>
        <ValidationMessage For="@(() => Post.Body)"/>
    </div>
    <input type="submit" class="btn btn-primary" value="Gem"/>
</EditForm>


@code {
    [Parameter] public UpdatePostDTO Post { get; set; }

    [Parameter] public EventCallback OnValidSubmit { get; set; }

    [Parameter] public EventCallback OnInvalidSubmit { get; set; }
}